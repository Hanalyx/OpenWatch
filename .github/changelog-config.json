{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 🔒 Security",
      "labels": ["security"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": ["chore", "maintenance", "dependencies"]
    },
    {
      "title": "## ⚡ Performance",
      "labels": ["performance"]
    }
  ],
  "ignore_labels": [
    "skip-changelog",
    "duplicate",
    "invalid",
    "wontfix"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in #${{NUMBER}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)",
      "label": "feature"
    },
    {
      "pattern": "^fix",
      "label": "bug"
    },
    {
      "pattern": "^docs",
      "label": "documentation"
    },
    {
      "pattern": "^chore",
      "label": "chore"
    },
    {
      "pattern": "^perf",
      "label": "performance"
    }
  ],
  "duplicate_filter": {
    "pattern": "^(Merge pull request|Merge branch)",
    "on_property": "title",
    "method": "match"
  },
  "transformers": [
    {
      "pattern": "^feat\\((.*)\\)",
      "target": "$1"
    }
  ],
  "max_tags_to_fetch": 100,
  "max_pull_requests": 250,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": ["main", "develop"],
  "tag_resolver": {
    "method": "semver",
    "filter": {
      "pattern": "v[0-9]+\\.[0-9]+\\.[0-9]+",
      "flags": "i"
    }
  },
  "base_branches": ["main"]
}