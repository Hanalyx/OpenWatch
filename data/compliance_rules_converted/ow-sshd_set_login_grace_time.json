      "check_method": "file",
      "check_command": "grep '^LoginGraceTime\\s\\+' /etc/ssh/sshd_config",
      "enable_command": "sed -i 's/^#\\?LoginGraceTime.*/{ parameter } /' /etc/ssh/sshd_config",
      "validation_command": "sshd -t",
